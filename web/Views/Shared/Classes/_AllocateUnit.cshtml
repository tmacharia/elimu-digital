<style>
    #unit_allocate {
        font-size: 16px;
        font-weight: 200;
    }

    #rooms-loader {
        position: absolute;
        transform: translate(20%, -140%);
    }
</style>

<div class="modal fade" data-backdrop="true" id="allocateUnitModal">
    <div class="modal-dialog animate" id="animate">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <span>
                        <i class="fa fa-fw fa-building"></i>  Allocate Classroom to <i id="unit_allocate"></i>
                    </span>
                </h5>
            </div>
            <div class="modal-body p-lg">
                <form id="allocateUnitForm">
                    <div class="form-group">
                        <label>Choose a classroom</label>
                        <select class="form-control" name="Classroom" id="roomSelect" required></select>
                        <span id="rooms-loader" class="text-muted">
                            <i class="fa fa-refresh fa-spin"></i> fetching...
                        </span>
                    </div>
                    <div class="modal-footer">
                        <button class="btn dark-white p-x-md" data-dismiss="modal" type="button">Cancel</button>
                        <button class="btn danger p-x-md" id="allocateUnitBtnSubmit" type="submit">Submit</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

